-# Set Variables 
- est_date = Time.new(2012, 01, 16)


-# Markup
%section#poster_landing
  %header
    %hgroup
      %h1 NEW CARTOGRAPHERS
      %h2 creative agency
    = time_tag(est_date, est_date.strftime('est. %Y'))
  
  %section#introduction
    %p We've entered a new Age of Exploration
    %p The web is our frontier
    
    %p the voyage begins
    %p= time_tag(est_date, est_date.strftime('%m/%d/%y'))
  
  %section#crew
    %header
      %h1 Our Crew
    
    %dl
      %dt Brian McNabb
      %dd 
        %span --
        %address Brooklyn, New York
        %p Web-Developer, Businessman, Strategist
      %dt Matt Owen
      %dd 
        %span --
        %address Little Rock, Arkansas
        %p Graphic Artist, Posterman, Minimalist
      %dt Connor McNabb
      %dd 
        %span --
        %address Little Rock, Arkansas
        %p Copywriter, Web-Designer, Generalist
  
  %section#contact
    %header
      %h1 Now accepting inquiries!
    = simple_form_for Inquiry.new do |f|
      = f.input :name,         placeholder: 'First Last'
      = f.input :organization, placeholder: 'Acme Co.'
      = f.input :email,        placeholder: 'john.doe@example.com'
      = f.input :project_type, label: 'Project Type'
      = f.input :budget
      = f.input :description,  placeholder: 'What can we do for you?'
      = f.input :mailing_list, as: :boolean, input_html: { checked: true }
      = f.button :submit, 'send'
      %p= link_to 'Sign up for our Mailing list', '#', id: 'mailing_list_subscription'
      
    = simple_form_for MailingListSubscription.new, html: { hidden: true } do |f|
      = f.input :email, placeholder: 'john.doe@example.com'
      = f.input :captcha, as: :hidden
      = f.button :submit, 'join'
      %p We'll keep you abreast of what's going on leading up to our official site launch. You can expect no more than 2 messages a month.
      %p Seriously. We won't spam you.
      %p= link_to 'forget it', '#', id: 'inquiry'
  
  %footer